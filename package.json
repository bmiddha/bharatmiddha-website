{
  "private": true,
  "name": "bharatmiddha-website",
  "version": "0.1.0",
  "scripts": {
    "build": "next build",
    "precommit": "lint-staged",
    "dev": "next dev",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,html,md,mdx,yaml,json,css,scss} && prettier-package-json --write package.json",
    "lint": "eslint **/*.{js,jsx,ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "start": "next start"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.2.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "next": "10.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.8",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  }
}
